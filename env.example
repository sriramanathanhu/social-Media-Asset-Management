# For Coolify deployment (use your PostgreSQL service name):
DATABASE_URL="postgresql://username:password@postgres:5432/social_media_portal?schema=public"


# Authentication - Nandi Auth (Official Implementation)
# Based on official Nandi Auth examples with correct variable names and endpoints
NEXT_AUTH_URL=https://auth.kailasa.ai
NEXT_AUTH_CLIENT_ID=
AUTH_CLIENT_SECRET=
NEXT_BASE_URL=https://yourdomain.com


# Public Environment Variables (for frontend - using official naming)
NEXT_PUBLIC_NEXT_AUTH_URL=https://auth.kailasa.ai
NEXT_PUBLIC_NEXT_AUTH_CLIENT_ID=
NEXT_PUBLIC_BASE_URL=https://yourdomain.com


# Security
# Generate a secure 32-character encryption key
ENCRYPTION_KEY=your_32_character_encryption_key


# Application Configuration
NODE_ENV=production
PORT=3000
HOSTNAME=0.0.0.0


# Optional: Disable Next.js telemetry
NEXT_TELEMETRY_DISABLED=1